<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat"
        android:text="Match 1  |  23-08-21  |  11:00 AM"
        android:textColor="#112E52"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_match"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/spinner_new"
            android:paddingLeft="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="144dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#112E52" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/montserrat"
                android:text="VS"
                android:textColor="#112E52"
                android:textSize="12sp" />

            <View
                android:layout_width="144dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="#112E52" />


        </LinearLayout>


        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/spinner_new"
            android:paddingLeft="15dp" />


    </LinearLayout>

    <Button
        android:id="@+id/save_time"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save Match"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"/>

</LinearLayout>