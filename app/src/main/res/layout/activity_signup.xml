<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:letterSpacing="0.14"
            android:text="REGISTER"
            android:textColor="@color/textcolor"
            android:textFontWeight="600"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="@id/rootLayout"
            app:layout_constraintTop_toTopOf="@id/rootLayout" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_login_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Nice to see you!"
            android:textColor="@color/textcolor"
            android:textFontWeight="400"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/rootLayout"
            app:layout_constraintTop_toBottomOf="@id/txt_register" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/registerationiconnew"
            app:layout_constraintEnd_toEndOf="@id/rootLayout"
            app:layout_constraintStart_toStartOf="@id/rootLayout"
            app:layout_constraintTop_toBottomOf="@id/txt_login_desc" />

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/customouterline"
            android:drawableLeft="@drawable/personfinalicon"
            android:drawablePadding="8dp"
            android:hint="First Name"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_login" />

        <EditText
            android:id="@+id/et_signupid"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/customouterline"
            android:drawableLeft="@drawable/emailfinalicon"
            android:drawablePadding="8dp"
            android:hint="Email Id"
            android:paddingLeft="12dp"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/et_mobile"
            app:layout_constraintTop_toBottomOf="@+id/et_first_name" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/customouterline"
            android:drawableLeft="@drawable/mobilefinalicon"
            android:drawablePadding="8dp"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="12dp"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@+id/et_address_line1"
            app:layout_constraintTop_toBottomOf="@+id/et_signupid" />

        <EditText
            android:id="@+id/et_address_line1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/customouterline"
            android:drawableLeft="@drawable/personfinalicon"
            android:drawablePadding="8dp"
            android:hint="Address Line 1"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_mobile" />

        <EditText
            android:id="@+id/et_city_state"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/customouterline"
            android:drawableLeft="@drawable/personfinalicon"
            android:drawablePadding="8dp"
            android:hint="City/State"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_address_line1" />

        <EditText
            android:id="@+id/et_pincode"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/customouterline"
            android:drawableLeft="@drawable/personfinalicon"
            android:drawablePadding="8dp"
            android:hint="Pincode"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_city_state" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/customouterline"
            android:drawableLeft="@drawable/passwordfinalicon"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_pincode" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/customouterline"
            android:drawableLeft="@drawable/passwordfinalicon"
            android:drawablePadding="8dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_password" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/buttons"
            android:text="REGISTER"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_confirm_password" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:text="Already member?"
            android:textColor="@color/textcolor"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@id/btn_submit"
            app:layout_constraintTop_toBottomOf="@id/btn_submit" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="Login"
            android:textColor="@color/textcolor"
            android:textSize="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@id/btn_submit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>