<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.livecricketapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LiveCricketApp">
        <activity android:name=".activities.CreateTournamentOne">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Host_a_tournament"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.LiveMatchActivity" />
        <activity android:name=".authentication.ForgotPasswordActivity" />
        <activity android:name=".authentication.SignupActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".authentication.LoginActivity" />
        <activity android:name=".activities.SplashActivity">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>